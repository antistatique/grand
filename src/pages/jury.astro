---
import { getCollection } from 'astro:content';

import Icon from 'components/Icon.astro';
import JuryComponent from 'components/Jury.astro';
import Layout from 'layouts/Layout.astro';

const juries = await getCollection('juries');
---

<Layout
  title="Le jury du GRAND 2024 est composé de 9 professionnels."
  description="Le jury 2024: 9 professionnel·les de la communication, de la publicité, du design et des médias. À eux et elles la responsabilité d’assigner les Awards du GRAND. Association le GRAND."
>
  <div class="layout">
    <h1 class="text-h-xl md:text-h-3xl text-center my-20 md:my-40 uppercase">
      <span>
        <span class="max-md:hidden"> les </span>
        Membres du</span
      >

      <span class="block text-core"
        >jury<Icon
          name="eye"
          classes="w-14 md:w-[1.5em] h-8 md:h-[0.7em] text-neutral-100 mx-2 md:mx-3 inline align-top"
        />2024</span
      >
    </h1>
    <ul
      class="relative grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-3 md:gap-x-5 gap-y-10 md:gap-y-30"
    >
      {
        juries.map((jury) => (
          <li>
            <JuryComponent jury={jury} />
          </li>
        ))
      }
      <p
        aria-hidden
        class="max-md:hidden absolute -right-4 lg:right-0 bottom-28 lg:bottom-[5.5rem] xl:bottom-16 text-code [writing-mode:tb-rl] rotate-180 z-20"
      >
        01000111 01010010 01000001 01001110 01000100
      </p>
    </ul>
  </div>
</Layout>
